<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hospital Admin Dashboard</title>
    <link rel="stylesheet" href="/assets/ad_dashboard.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="dashboard-container">
        <!-- Top Navigation -->
        <nav class="top-nav">
            <div class="nav-logo">
                <i class="fas fa-hospital"></i> Hospital Admin
            </div>
            <div class="nav-menu">
                <a href="#overview-cards" class="nav-menu-item active">Dashboard</a>
                <a href="#department-grid" class="nav-menu-item">Departments</a>
                <a href="#blood-bank-container" class="nav-menu-item">Blood Bank</a>
                <a href="#equipment-list" class="nav-menu-item">Equipment</a>
                <a href="#user-management" class="nav-menu-item">Users</a>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Overview Cards -->
            <section class="overview-cards" id="overview-cards">
                <div class="card">
                    <div class="card-header">
                        <span class="card-title">Total Departments</span>
                        <i class="fas fa-building"></i>
                    </div>
                    <div class="card-value">12</div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <span class="card-title">Blood Stock</span>
                        <i class="fas fa-tint"></i>
                    </div>
                    <div class="card-value"></div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <span class="card-title">Equipment Status</span>
                        <i class="fas fa-tools"></i>
                    </div>
                    <div class="card-value"></div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <span class="card-title">Active Users</span>
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="card-value"></div>
                </div>
            </section>

            <!-- Quick Actions -->
            <section class="quick-actions">
                <button class="action-button">
                    <i class="fas fa-plus"></i> Add Department
                </button>
                <button class="action-button">
                    <i class="fas fa-file-export"></i> Generate Report
                </button>
                <button class="action-button">
                    <i class="fas fa-calendar-alt"></i> Schedule Maintenance
                </button>
            </section>

            <!-- Department Management -->
            <section class="department-grid" id="department-grid">
                <div class="department-card">
                    <h3>Emergency Department</h3>
                    <div class="department-stats">
                        <span>Staff: </span>
                        <span>Status: Active</span>
                    </div>
                </div>
                <div class="department-card">
                    <h3>Cardiology</h3>
                    <div class="department-stats">
                        <span>Staff: </span>
                        <span>Status: Active</span>
                    </div>
                </div>
                <div class="department-card">
                    <h3>Pediatrics</h3>
                    <div class="department-stats">
                        <span>Staff: </span>
                        <span>Status: Active</span>
                    </div>
                </div>
            </section>

            <!-- Blood Bank Management -->
            <section class="blood-bank-container" id="blood-bank-container">
                <div class="blood-stock-grid">
                    <div class="blood-group-card">
                        <h4>A+</h4>
                        <div class="card-value"></div>
                    </div>
                    <div class="blood-group-card">
                        <h4>B+</h4>
                        <div class="card-value"></div>
                    </div>
                    <div class="blood-group-card">
                        <h4>O+</h4>
                        <div class="card-value"></div>
                    </div>
                    <div class="blood-group-card">
                        <h4>AB+</h4>
                        <div class="card-value"></div>
                    </div>
                </div>
            </section>

            <!-- Equipment Maintenance -->
            <section class="equipment-list" id="equipment-list">
                <div class="equipment-card">
                    <h3>MRI Machine</h3>
                    <span class="equipment-status status-active">Operational</span>
                    <p>Next Maintenance: </p>
                </div>
                <div class="equipment-card">
                    <h3>X-Ray Machine</h3>
                    <span class="equipment-status status-maintenance">Under Maintenance</span>
                    <p>Next Maintenance:</p>
                </div>
                <div class="equipment-card">
                    <h3>CT Scanner</h3>
                    <span class="equipment-status status-active">Operational</span>
                    <p>Next Maintenance: </p>
                </div>
            </section>

            <!-- User Management -->
            <section class="user-management" id="user-management">
                <table class="user-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Role</th>
                            <th>Department</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </section>

            <!-- Recent Activities -->
            <section class="activity-timeline">
                <div class="activity-item">
                    <div class="activity-dot"></div>
                    <h4>New Department Added</h4>
                    <p>Neurology department was added to the system</p>
                    <small>2 hours ago</small>
                </div>
                <div class="activity-item">
                    <div class="activity-dot"></div>
                    <h4>Blood Stock Updated</h4>
                    <p>New blood units were added to the inventory</p>
                    <small>4 hours ago</small>
                </div>
                <div class="activity-item">
                    <div class="activity-dot"></div>
                    <h4>Equipment Maintenance</h4>
                    <p>X-Ray machine maintenance completed</p>
                    <small>6 hours ago</small>
                </div>
            </section>

            <!-- System Monitoring -->
            <section class="monitoring-grid">
                <div class="metric-card">
                    <h3>System Performance</h3>
                    <div class="metric-value">98%</div>
                </div>
                <div class="metric-card">
                    <h3>Storage Usage</h3>
                    <div class="metric-value">65%</div>
                </div>
                <div class="metric-card">
                    <h3>Network Status</h3>
                    <div class="metric-value">100%</div>
                </div>
            </section>

            <!-- Alert Notifications -->
            <section class="alerts">
                <div class="alert alert-success">
                    <i class="fas fa-check-circle"></i>
                    System backup completed successfully
                </div>
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i>
                    Low blood stock for B- type
                </div>
                <div class="alert alert-danger">
                    <i class="fas fa-times-circle"></i>
                    Emergency department equipment needs immediate attention
                </div>
            </section>
        </main>
    </div>
</body>
</html>