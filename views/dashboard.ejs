<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Department Dashboard</title>
    <link rel="stylesheet" href="/assets/dashboard.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    
    <div class="dashboard-container">
        <!-- Top Navigation -->
        <nav class="top-nav">
            <div class="nav-logo">
                <i class="fas fa-hospital"></i> Department Dashboard
            </div>
            <div class="nav-menu">
                <a href="#dept-header" class="nav-menu-item active">Overview</a>
                <a href="#staff-grid" class="nav-menu-item">Staff</a>
                <a href="#schedule-container" class="nav-menu-item">Schedule</a>
                <a href="#equipment-list" class="nav-menu-item">Equipment</a>
                <a href="#queue-container" class="nav-menu-item">Queue</a>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Department Header -->
            <section class="dept-header" id="dept-header">
                <h1 class="dept-title">Emergency Department</h1>
                <div class="dept-info">
                    <div class="dept-stat">
                        <i class="fas fa-users"></i>
                        <span>25 Staff Members</span>
                    </div>
                    <div class="dept-stat">
                        <i class="fas fa-bed"></i>
                        <span>15 Available Beds</span>
                    </div>
                    <div class="dept-stat">
                        <i class="fas fa-clock"></i>
                        <span>24/7 Operation</span>
                    </div>
                </div>
            </section>

            <!-- Department Stats -->
            <section class="stats-grid">
                <div class="stat-card">
                    <div class="stat-value"></div>
                    <div class="stat-label">Patients Today</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value"></div>
                    <div class="stat-label">Active Cases</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value"></div>
                    <div class="stat-label">Avg. Wait Time (hrs)</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value"></div>
                    <div class="stat-label">Capacity</div>
                </div>
            </section>

            <!-- Staff Management -->
          
          
            <section class="staff-grid" id="staff-grid">
                <div class="staff-card">
                    <div class="staff-info">
                        <div class="staff-avatar">
                            <i class="fas fa-user-md"></i>
                        </div>
                        <div class="staff-details">
                            <h3>Dr. Sarah Johnson</h3>
                            <div class="staff-role">Senior Physician</div>
                            <span class="staff-status status-available">Available</span>
                        </div>
                    </div>
                </div>
                <div class="staff-card">
                    <div class="staff-info">
                        <div class="staff-avatar">
                            <i class="fas fa-user-nurse"></i>
                        </div>
                        <div class="staff-details">
                            <h3>Nurse Mike Brown</h3>
                            <div class="staff-role">Head Nurse</div>
                            <span class="staff-status status-busy">Busy</span>
                        </div>
                    </div>
                </div>
                <div class="staff-card">
                    <div class="staff-info">
                        <div class="staff-avatar">
                            <i class="fas fa-user-md"></i>
                        </div>
                        <div class="staff-details">
                            <h3>Dr. Emily Chen</h3>
                            <div class="staff-role">Resident</div>
                            <span class="staff-status status-available">Available</span>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Schedule Management -->
            <section class="schedule-container" id="schedule-container">
                <div class="schedule-header">
                    <h2>Today's Schedule</h2>
                    <button class="btn btn-primary">
                        <i class="fas fa-plus"></i> Add Schedule
                    </button>
                </div>
                <div class="schedule-grid">
                    <div class="schedule-item">
                        <div class="schedule-time">08:00 - 12:00</div>
                        <div class="schedule-details">
                            <strong>Morning Shift:</strong>
                        </div>
                    </div>
                    <div class="schedule-item">
                        <div class="schedule-time">12:00 - 16:00</div>
                        <div class="schedule-details">
                            <strong>Afternoon Shift:</strong>
                        </div>
                    </div>
                    <div class="schedule-item">
                        <div class="schedule-time">16:00 - 20:00</div>
                        <div class="schedule-details">
                            <strong>Evening Shift:</strong>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Equipment Status -->
            <section class="equipment-status" id="equipment-list">
                <div class="equipment-card">
                    <div class="equipment-header">
                        <div class="equipment-name">MRI Machine</div>
                        <span class="equipment-status-indicator status-available">Operational</span>
                    </div>
                    <p>Last Maintenance: </p>
                </div>
                <div class="equipment-card">
                    <div class="equipment-header">
                        <div class="equipment-name">X-Ray Machine</div>
                        <span class="equipment-status-indicator status-maintenance">Under Maintenance</span>
                    </div>
                    <p>Next Available: </p>
                </div>
                <div class="equipment-card">
                    <div class="equipment-header">
                        <div class="equipment-name">CT Scanner</div>
                        <span class="equipment-status-indicator status-available">Operational</span>
                    </div>
                    <p>Last Maintenance: </p>
                </div>
            </section>

            <!-- Patient Queue -->
            <section class="queue-container" id="queue-container">
                <div class="queue-header">
                    <h2>Current Queue</h2>
                    <button class="btn btn-primary">
                        <i class="fas fa-plus"></i> Add Patient
                    </button>
                </div>
                <ul class="queue-list">
                    <li class="queue-item">
                        <div class="queue-info">
                            <span class="queue-number">#001</span>
                            <span></span>
                        </div>
                        <span class="queue-time"></span>
                    </li>
                    <li class="queue-item">
                        <div class="queue-info">
                            <span class="queue-number">#002</span>
                            <span></span>
                        </div>
                        <span class="queue-time"></span>
                    </li>
                    <li class="queue-item">
                        <div class="queue-info">
                            <span class="queue-number">#003</span>
                            <span></span>
                        </div>
                        <span class="queue-time"></span>
                    </li>
                </ul>
            </section>
        </main>
    </div>
</body>
</html>